RewriteEngine On

# If the request is not an existing file or directory, but adding .html would match an existing file, serve that file.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Optional: Force index.html for directory requests (some servers already do this)
DirectoryIndex index.html
